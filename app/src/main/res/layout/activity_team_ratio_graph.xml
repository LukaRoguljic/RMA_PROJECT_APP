<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teamRatioGraph">

    <TextView
        android:id="@+id/kdRatioTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="KD/A RATIO OF PLAYERS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barGraph"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/kdRatioTV"
        tools:layout_editor_absoluteX="0dp">

    </com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/mapPercentageTv"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="MAP win percentages"
        app:layout_constraintBottom_toTopOf="@+id/mapPercentage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/barGraph" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/mapPercentage"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/barGraph"
        tools:layout_editor_absoluteX="0dp">


    </com.github.mikephil.charting.charts.LineChart>

</android.support.constraint.ConstraintLayout>